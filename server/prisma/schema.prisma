generator client {
  provider = "prisma-client-js"
}

// taboo words

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @unique @default(uuid())
  email     String     @unique
  name      String?
  password  String
  post      Post[]
  follows   User[]     @relation(name: "Followers")
  followers User[]     @relation(name: "Followers")
  comments  Comments[]
  likes     Likes[]
  ads       Ads[]
  userType  String     @default("ordinary") // surfer , corportate , trendy , super, ordinary
}

model Post {
  id       String     @id @default(uuid())
  body     String
  title    String
  userId   String
  User     User       @relation(fields: [userId], references: [id])
  comments Comments[]
  likes    Likes[]
}

// create ads

model Ads {
  id     String  @id @default(uuid())
  title  String
  body   String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Comments {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  Post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Likes {
  userId String
  postId String

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [postId], references: [id])

  @@id([userId, postId])
}
